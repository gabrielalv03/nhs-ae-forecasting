library(lubridate)
library(dplyr)

train_data <- cleaned_full_social_nhs_data %>%
  mutate(
    date = as.Date(date),  # You may replace this with `my(date)` if needed
    pandemic_flag = if_else(
      date >= as.Date("2020-03-01") & date <= as.Date("2021-07-31"),
      1L, 0L  # use integers explicitly
    )
  )


